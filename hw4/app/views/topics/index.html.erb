<h1>Listing Evaluation Templates</h1><br />

<table>
  <tr>
    <th>Template ID</th>
    <th>Title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @topics.each do |topic| %>
    <tr>
      <td><%= topic.id %></td>
      <td><%= topic.title %></td>
      <td><%= link_to 'Evaluate', topic %></td>
      <td><%= link_to 'Edit', edit_topic_path(topic) %></td>
      <td><%= link_to 'Destroy', topic, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

